						{
							"listen": "test",
							"script": {
								"exec": [
									"// Robust post-response script: safely parse JSON, assert basics, extract and store user id",
									"(function () {",
									"  pm.test(\"Status code is 201\", function () {",
									"    pm.expect(pm.response.code).to.eql(201);",
									"  });",
									"",
									"  const contentType = (pm.response.headers.get(\"Content-Type\") || \"\").toLowerCase();",
									"  const isJson = contentType.includes(\"application/json\");",
									"",
									"  let data = null;",
									"  let parseError = null;",
									"",
									"  if (isJson) {",
									"    try {",
									"      data = pm.response.json();",
									"      pm.test(\"Response is valid JSON\", function () {",
									"        pm.expect(data).to.be.an(\"object\");",
									"      });",
									"    } catch (e) {",
									"      parseError = e;",
									"      console.warn(\"Failed to parse JSON despite JSON Content-Type:\", e && e.message);",
									"    }",
									"  } else {",
									"    console.info(\"Response Content-Type is not JSON:\", contentType);",
									"  }",
									"",
									"  // Extract and save id if present",
									"  let id = null;",
									"  if (data && typeof data === \"object\" && Object.prototype.hasOwnProperty.call(data, \"id\")) {",
									"    id = String(data.id);",
									"    pm.environment.set(\"userid\", id);",
									"    console.log(\"Saved environment variable 'userid':\", id);",
									"  }",
									"",
									"  // Assertions around id presence and type when JSON body is available",
									"  pm.test(\"Response JSON contains an id string\", function () {",
									"    if (data && typeof data === \"object\") {",
									"      pm.expect(data).to.have.property(\"id\");",
									"      pm.expect(String(data.id)).to.be.a(\"string\").and.not.empty;",
									"    } else {",
									"      // If we couldn't parse JSON, fail explicitly to surface the issue",
									"      pm.expect.fail(\"Response body was not parsed as JSON, cannot verify 'id'.\");",
									"    }",
									"  });",
									"})();"
								],
								"type": "text/javascript",
