				{
					"name": "Login(extract token)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Parse JSON safely, handle HTML or non-JSON responses, and save token to env if present",
									"(function () {",
									"  pm.test(\"Response received\", function () {",
									"    pm.expect(pm.response).to.be.ok;",
									"  });",
									"",
									"  const contentType = pm.response.headers.get(\"Content-Type\") || \"\";",
									"  const isJson = contentType.toLowerCase().includes(\"application/json\");",
									"",
									"  let data = null;",
									"  let parseError = null;",
									"",
									"  if (isJson) {",
									"    try {",
									"      data = pm.response.json();",
									"      pm.test(\"Response is valid JSON\", function () {",
									"        pm.expect(data).to.be.an(\"object\");",
									"      });",
									"      console.log(\"Parsed JSON response:\", data);",
									"    } catch (e) {",
									"      parseError = e;",
									"      console.warn(\"Failed to parse JSON response despite JSON Content-Type:\", e && e.message);",
									"    }",
									"  } else {",
									"    // Guard: response is not JSON (often HTML); don't attempt pm.response.json()",
									"    console.info(\"Response Content-Type is not JSON:\", contentType);",
									"  }",
									"",
									"  // Try to extract token only if data is an object and token exists",
									"  let token = null;",
									"  if (data && typeof data === \"object\" && data.token) {",
									"    token = String(data.token);",
									"    pm.environment.set(\"token\", token);",
									"    console.log(\"Token extracted and saved to active environment variable 'token'.\");",
									"  } else {",
									"    // Clear token only if you want to avoid using stale tokens; comment out if undesired",
									"    // pm.environment.unset(\"token\");",
									"    if (!isJson) {",
									"      console.info(\"Token not extracted because response was not JSON (likely HTML page).\" );",
									"    } else if (parseError) {",
									"      console.info(\"Token not extracted because JSON parsing failed.\");",
									"    } else {",
									"      console.info(\"Token field was not present in JSON response.\");",
									"    }",
									"  }",
									"",
									"  // Assertion that the response contains a token when JSON body has it",
									"  pm.test(\"Response contains a token field (when applicable)\", function () {",
									"    // Do not fail the entire script for HTML/non-JSON or parse errors; assert only when we have JSON",
									"    if (data && typeof data === \"object\") {",
									"      pm.expect(data).to.have.property(\"token\");",
									"    } else {",
									"      pm.expect(true).to.be.true; // Graceful no-op for non-JSON",
									"    }",
									"  });",
									"",
									"})();"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						},
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Set current time in environment variable 'current_time' as mm-dd-yyyy HH:mm:ss",
									"(function () {",
									"  const now = new Date();",
									"  const pad2 = (n) => String(n).padStart(2, '0');",
									"",
									"  const mm = pad2(now.getMonth() + 1);",
									"  const dd = pad2(now.getDate());",
									"  const yyyy = now.getFullYear();",
									"  const HH = pad2(now.getHours());",
									"  const MM = pad2(now.getMinutes());",
									"  const SS = pad2(now.getSeconds());",
									"",
									"  const formatted = `${mm}-${dd}-${yyyy} ${HH}:${MM}:${SS}`;",
									"  pm.environment.set('current_time', formatted);",
									"})();"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
